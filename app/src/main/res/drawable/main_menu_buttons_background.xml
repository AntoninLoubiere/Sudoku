<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/default_gap" />
            <gradient android:angle="-90" android:endColor="@color/main_menu_button_end_color_selected" android:startColor="@color/main_menu_button_start_color_selected" android:type="linear" />

        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/default_gap" />
            <gradient android:angle="-90" android:endColor="@color/main_menu_button_end_color_selected" android:startColor="@color/main_menu_button_start_color_selected" android:type="linear" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/default_gap" />
            <gradient android:angle="-90" android:endColor="@color/main_menu_button_end_color" android:startColor="@color/main_menu_button_start_color" android:type="linear" />

        </shape>
    </item>
</selector>